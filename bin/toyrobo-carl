#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "toyrobo/table"
require "toyrobo/robot"
require "toyrobo/runner"
require "toyrobo/lexer"
require "toyrobo/parser"
require "toyrobo/interpreter"
require "optparse"

ARGV << "-h" if ARGV.empty?

options = {}
OptionParser.new do |parser|
  parser.banner = "Usage: toyrobo-carl -f [filename]"
  parser.separator ""

  parser.on("-f", "--filename FILENAME", "filepath")

  parser.on("-h", "--help", "Show this message") do
    puts parser
    exit
  end
end.parse!(into: options)

Toyrobo::Runner.new(options[:filename]).run
